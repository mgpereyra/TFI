<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MisPuntosActivity"
    android:id="@+id/draweMisPuntos"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.DashboardUserActivity"
        android:background="@color/backGroundCustom">
    <LinearLayout
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="200dp"
            android:layout_height="67dp"
            app:title="@string/app_name"

            />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnVolver_deMisPuntos"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_arrow_back" />
    </LinearLayout>


        <ImageView
            android:id="@+id/circle_mis_puntos"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@id/barra"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/circle"
            app:tint="@color/black"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cantidad_de_puntos"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintEnd_toEndOf="@id/circle_mis_puntos"
            app:layout_constraintStart_toStartOf="@id/circle_mis_puntos"
            app:layout_constraintTop_toTopOf="@id/circle_mis_puntos"
            app:layout_constraintBottom_toBottomOf="@id/circle_mis_puntos"
            android:text="@string/Ejemplo_cant_puntos"
            android:textSize="56sp"
            android:textAlignment="center"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_mis_puntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/circle_mis_puntos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/puntos_acumulados"
            android:textSize="20sp"
            />
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/ocre"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/label_historial_puntos"
            app:layout_constraintTop_toBottomOf="@id/label_mis_puntos"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="207dp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/label_historial_puntos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/divider"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="60dp"
            android:text="@string/historial_de_puntos"
            app:layout_constraintEnd_toEndOf="@id/label_mis_puntos"
            android:textSize="20sp"
            android:textAlignment="viewStart"
            />
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/historial_canje"
    android:layout_marginTop="10dp"
    android:layout_margin="2dp"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/label_historial_puntos"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:listitem="@layout/card_info"
    tools:itemCount="3"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_finalizar"
            android:layout_width="190dp"
            android:layout_height="60dp"
            android:layout_margin="20dp"
            android:layout_marginBottom="100dp"
            android:backgroundTint="@color/emerald"
            android:text="@string/canjear_puntos"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/emerald" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu"
        android:fitsSystemWindows="true"/>
</androidx.drawerlayout.widget.DrawerLayout>