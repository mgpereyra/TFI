<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerMisServicios"
    android:fitsSystemWindows="true"
    tools:context=".ui.MisServiciosConfirmadosActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/barra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbarMisServicios"
            android:layout_width="200dp"
            android:layout_height="67dp"
            app:title="@string/app_name"

            />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnVolver_deMisPuntos"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:src="@drawable/ic_arrow_back" />
    </LinearLayout>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/servicios_confirmados"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Confirmados"
            android:textSize="20sp"
            android:gravity="center"

            app:layout_constraintTop_toBottomOf="@id/barra"
            app:layout_constraintStart_toStartOf="parent"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/servicios_pendientes"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Pendientes"
            app:layout_constraintTop_toBottomOf="@id/barra"
            app:layout_constraintStart_toEndOf="@id/servicios_confirmados"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listado_servicios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/mis_servicios_card"
            app:layout_constraintTop_toBottomOf="@id/servicios_confirmados"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu"
        android:fitsSystemWindows="true"/>
</androidx.drawerlayout.widget.DrawerLayout>