<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recolector.ServiciosRecolectorRutaActivity">

  <com.google.android.material.appbar.MaterialToolbar
      android:id="@+id/toolbar_serv_list_rec"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/rojo2"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.001"
      app:title="@string/app_name" />


  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_ruta_servicios_list"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/toolbar_serv_list_rec"
      app:layout_constraintVertical_bias="0.0"
      tools:itemCount="10"
      tools:listitem="@layout/servicios_recolector_ruta_item" />
</androidx.constraintlayout.widget.ConstraintLayout>

