<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ar.com.unlam.enlazar"
    android:hardwareAccelerated="true">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_negro"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_negro"
        android:supportsRtl="true"
        android:theme="@style/Theme.Enlazar"
        android:vmSafeMode="false">
        <activity
            android:name=".ui.vecino.QrViewActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key2" />

        <activity
            android:name=".ui.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.recolector.RutaRecolectorMapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.recolector.ServiciosFinalizadosRecolectorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.recolector.ServiciosRecolectorRutaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.recolector.DashboardRecolectorActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.vecino.MisPuntosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.vecino.MisCanjesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.vecino.MiCuentaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.vecino.MisEncuentrosActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.vecino.DetalleCanjeItemActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.vecino.DashboardUserActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.vecino.NuevoServicioActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.vecino.SeccionInformativaDetalleActivity"
            android:screenOrientation="portrait" />
