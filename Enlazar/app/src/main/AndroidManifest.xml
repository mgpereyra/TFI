            android:name=".ui.vecino.SeccionInformativaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.vecino.PuntosEncuentroMapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.vecino.MisServiciosActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.vecino.MisServiciosDetalleActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.vecino.CrearCuentaActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>