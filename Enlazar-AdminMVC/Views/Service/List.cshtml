@using Enlazar.Database.ViewModels

@model ServiceViewModel

@{
    ViewBag.Title = "Lista de servicios";
}

<div class="d-flex mb-4">
    <div class="pb-lg-2 w-100">
        <h2><i class="fas fa-street-view pt-2 mr-2" aria-hidden="true"></i>Listado de servicios asignados</h2>
    </div>
    <div class="flex-shrink-1"> <a class="btn btn-primary m-2" href="Manage"><i class="fa fa-plus-circle"></i>Administrar servicios</a></div>
</div>
@if (Model.ListServices.Count() == 0)
{
<div class="alert alert-dark text-center" role="alert">
   No hay servicios asignados
</div>
   
}
else
{
    <div class="card text-white bg-dark">
        <table class="table  table-striped table-dark table-responsive rounded">
            <thead class="font-weight-bold text-uppercase">
                <tr class="border-bottom border-primary">
                    <td width="20%">Fecha</td>
                    <td width="25%">Direccion</td>
                    <td width="20%">Vecino</td>
                    <td width="20%">Reciclador</td>
                    <td width="500px"></td>


                <tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ListServices)
                {
                    <tr>

                        <td>@item.date @item.time</td>
                        <td>@item.address</td>
                        <td>@item.userId</td>
                        <td>@item.recolectorId</td>

                        <td class="acciones">
                            @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                            @Html.ActionLink("Detalle", "Details", new { id = item.id }) 
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}